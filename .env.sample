# WordPress記事自動生成システム 環境変数設定

# エディション設定
EDITION=entry  # entry, standard, pro

# WordPress 設定（必須）
WP_SITE_URL=https://your-wordpress-site.com
WP_USER=your_username
WP_APP_PASS=your_application_password
CATEGORY_ID=2

# OpenAI 設定（必須）
OPENAI_API_KEY=sk-your_openai_api_key

# 生成設定
POST_STATUS=draft  # draft, publish
NEW_COUNT=5
MONTHLY_LIMIT=50

# ログ設定
LOG_LEVEL=INFO
